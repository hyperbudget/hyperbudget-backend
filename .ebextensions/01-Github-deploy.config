files:
    "/root/.ssh/config":
        owner: root
        group: root
        mode: "000600"
        content: |
            Host github.com
                User git
                Hostname github.com
                IdentityFile /root/.ssh/hyperbudget-bot-github-deploy
    "/root/.ssh/known_hosts":
        owner: root
        group: root
        mode: "000644"
        content: |
           |1|2yyvx9lY0TWpaekvDxOdbyp4X8Y=|mcU2PmmqK6Rd950AnuzbCSLiOU8= ssh-rsa 

commands:
    01-command:
        command: sudo aws s3 cp s3://hyperbudget-bot-deployment-key/hyperbudget-bot-github-deploy /root/.ssh
    02-command:
        command: sudo chmod 600 /root/.ssh/hyperbudget-bot-github-deploy
